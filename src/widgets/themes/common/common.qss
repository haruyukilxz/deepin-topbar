QScrollArea {
    background: transparent;
}

dtb--widgets--TranslucentFrame {
    background: transparent;
}

#LineEditWidget QLineEdit
{
    background: transparent;
    border: none;
}

#LineEditWidget QLabel
{
    color: white;
}

dtb--widgets--SettingsItem[isHead=true] {
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
}
dtb--widgets--SettingsItem[isTail=true] {
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
}

QLabel#SliderLeftIcon, QLabel#SliderRightIcon {
    margin: 12px 0px 0px 0px;
}

dtb--widgets--NormalLabel#SettingsHeaderItemTitle {
    font-weight: 550;
}

dtb--widgets--NormalLabel#SettingsHeadTitle {
    font-weight: 550;
}

dtb--widgets--NextPageWidget:hover {
    background-color: rgba(255, 255, 255, .3);
}

dtb--widgets--TitledSliderItem:hover {
    background-color: rgba(255, 255, 255, .3);
}

dtb--widgets--SwitchWidget:hover {
    background-color: rgba(255, 255, 255, .3);
}
